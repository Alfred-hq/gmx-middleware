{
  "compilerOptions": {
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true,
    "target": "ES2020",
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "composite": true,
    "incremental": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "pretty": true,
    "lib": [
      "es2022"
    ]
  },
  "exclude": [
    "**/*.test.ts",
    "**/.dist"
  ]
}